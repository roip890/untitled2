<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="addPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="300.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="sample.addMovieController">
  <bottom>
    <HBox alignment="CENTER" maxHeight="50.0" minHeight="50.0" spacing="20.0" BorderPane.alignment="CENTER">
      <children>
        <Button styleClass="btnBar" mnemonicParsing="false" text="Cancel" />
        <Button styleClass="btnBar" mnemonicParsing="false" text="Add" />
      </children>
      <BorderPane.margin>
        <Insets top="10.0" />
      </BorderPane.margin>
    </HBox>
  </bottom>
  <center>
    <GridPane prefHeight="48.0" prefWidth="200.0" BorderPane.alignment="CENTER">
      <children>
        <HBox alignment="CENTER_LEFT" minWidth="90.0">
          <children>
            <Label styleClass="whiteFont" text="Code:" />
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" minWidth="90.0" GridPane.rowIndex="1">
          <children>
            <Label styleClass="whiteFont" text="Name:" />
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" minWidth="90.0" GridPane.rowIndex="2">
          <children>
            <Label styleClass="whiteFont" text="Length:" />
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" maxHeight="90.0" minWidth="90.0" prefWidth="90.0" GridPane.rowIndex="3">
          <children>
            <Label styleClass="whiteFont" text="Rank:" />
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" minWidth="90.0" GridPane.rowIndex="4">
          <children>
            <Label styleClass="whiteFont" text="Description:" />
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="4">
          <children>
            <TextField id="txt" fx:id="txtMovieDescription" />
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
          <children>
            <Slider fx:id="sliderRating" />
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="2">
          <children>
            <TextField fx:id="txtLength" />
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="1">
          <children>
            <TextField fx:id="txtMovieName" />
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1">
          <children>
            <TextField fx:id="txtCode" />
          </children>
        </HBox>
      </children>
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="90.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="190.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
      </rowConstraints>
      <BorderPane.margin>
        <Insets left="10.0" right="10.0" />
      </BorderPane.margin>
    </GridPane>
  </center>
  <padding>
    <Insets bottom="20.0" top="20.0" />
  </padding>
  <top>
    <Label styleClass="whiteFont" text="Add Movie" BorderPane.alignment="CENTER">
      <font>
        <Font size="20.0" />
      </font>
      <BorderPane.margin>
        <Insets bottom="10.0" />
      </BorderPane.margin>
    </Label>
  </top>
</BorderPane>
